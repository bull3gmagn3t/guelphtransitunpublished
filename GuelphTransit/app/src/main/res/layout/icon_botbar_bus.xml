<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:id="@+id/bot_bar_icon_frame"
    android:background="@drawable/rounded_corners_dark"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:weightSum="1">

    <TextView
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:textColor= "@color/bot_icon_id_colour"
        android:textSize="40sp"
        android:text="@string/temp_list_route_id"
        android:id="@+id/bus_id"
        android:gravity="center"/>

    <TextView
        android:layout_width="81dp"
        android:layout_height="40dp"
        android:textColor="@color/bot_icon_name_colour"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/temp_sched_route_name"
        android:id="@+id/bus_route"
        android:gravity="center"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"/>

</LinearLayout>